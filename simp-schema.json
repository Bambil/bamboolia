{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "SIMP JSON Schema",
	"type": "object",
	"properties": {
		"id": {
			"description": "ID of IoT device",
			"type": "integer"
		},
		"type": {
			"description": "Catagory of IoT device",
			"type": "string"
		},
		"variables": {
			"description": "Array of available variables on IoT device"
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "Name of IoT device variable",
						"type": "string"
					},
					"type": {
						"description": "Type of IoT device variable",
						"type": "string"
					},
				},
				"required": ["name", "type"]
			}
		}
	}
}
